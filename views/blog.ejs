<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>
</head>

<body>
  <%- include('./partials/nav') %>
  <div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" class="img-fluid" width="700px" />
    <pre class="mt-3"><%= blog.body %></pre>
  </div>
  <div class="container mt-3">
    <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle" width="60px" height="60px" />
    <p>Written by: <strong><%= blog.createdBy.fullName %></strong></p>
  </div>
  <div class="container mt-3">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="POST">
      <div class="mb-3">
        <input type="text" class="form-control" name="content" placeholder="Enter your comment">
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>
  <% } %>
  <div class="container mt-3">
    <% comments.forEach(comment => { %>
    <div>
      <img src="<%= comment.createdBy.profileImageURL %>" class="rounded-circle" width="40px" height="40px" />
      <%= comment.createdBy.fullName %>
      <pre><%= comment.content %></pre>
    </div>
    <% }) %>
  </div>
  <%- include('./partials/scripts') %>
</body>

</html>